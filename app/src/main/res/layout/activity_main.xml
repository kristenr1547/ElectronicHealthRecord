<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="48dp"
                android:fontFamily="sans-serif"
                android:text="Patient Care Portal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="34sp" />

            <EditText
                android:id="@+id/usernameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="USERNAME"
                android:inputType="textPersonName"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/incorrectLoginError"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="USERNAME OR PASSWORD INCORRECT"
                android:textAlignment="center"
                android:textColor="#CC2121"
                android:textSize="20sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button"
                android:layout_width="138dp"
                android:layout_height="51dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                android:backgroundTint="#006969"
                android:onClick="enterProgram"
                android:layout_gravity="center"
                android:text="enter" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="255dp"
                android:layout_height="207dp"
                android:layout_marginBottom="72dp"
                app:srcCompat="@drawable/ic_baseline_medical_services_24"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>